# Local server settings
PORT=3000

# OpenAI settings (required for AI assistant)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini
OPENAI_REASONING_EFFORT=minimal
AI_MAX_OUTPUT_TOKENS=2200
AI_DEBUG_LOGS=false

# Optional fallback: load API key from a private file path instead of OPENAI_API_KEY
# OPENAI_API_KEY_FILE=/absolute/path/to/openai_key.txt

# Documentation grounding (backend-side)
AI_DOCS_ENABLED=true
# Relative paths are resolved from project root (Node) / webroot (PHP)
AI_DOCS_DIR=docs
AI_DOCS_FILES=getting-started.md,objects-and-alignment.md,parameter-data-formats.md,printers-and-connections.md,persistence-and-sharing.md,url-parameters.md,troubleshooting.md,security-and-privacy.md
AI_DOCS_MAX_SNIPPETS=4
AI_DOCS_SNIPPET_CHARS=700
AI_DOCS_MAX_CONTEXT_CHARS=3200

# Optional: explicit env file path for PHP endpoint bootstrapping
# APP_ENV_FILE=/absolute/path/to/.env
